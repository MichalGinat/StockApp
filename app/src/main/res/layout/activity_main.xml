<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/stockSymbolEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Stock Symbol"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/fetchStockButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fetchStockButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Stock Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onFetchStockButtonClick" />

    <TextView
        android:id="@+id/stockInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stockSymbolEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>
